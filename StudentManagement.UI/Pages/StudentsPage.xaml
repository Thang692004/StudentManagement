<UserControl x:Class="StudentManagement.UI.Pages.StudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#ECF0F1" Height="383">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="📚 Quản lý Sinh viên"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" CornerRadius="8" Background="White" Padding="10" 
                BorderBrush="#BDC3C7" BorderThickness="1" >
            <DataGrid x:Name="StudentsDataGrid" 
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F8F9F9"
                      GridLinesVisibility="None"
                      RowHeight="35"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding DateOfBirth}" Width="150"/>
                    <DataGridTextColumn Header="Lớp" Binding="{Binding Class}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <!-- Thêm -->
            <Button Width="120" Margin="0,0,10,0" Background="#27AE60" Style="{StaticResource ActionButtonStyle}" Click="BtnAdding_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Image Source="/Assets/Icons/add-symbol.png" Width="18" Height="18" Margin="0,0,0,0"/>
                    <TextBlock Text="Thêm" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Sửa -->
            <Button Width="120" Margin="0,0,10,0" Background="#2980B9" Style="{StaticResource ActionButtonStyle}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/delete.png" Width="18" Height="18" Margin="0,0,5,0"/>
                    <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Xóa -->
            <Button Width="120" Background="#C0392B" Style="{StaticResource ActionButtonStyle}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/modify-icon.png" Width="18" Height="18" Margin="0,0,5,0"/>
                    <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
