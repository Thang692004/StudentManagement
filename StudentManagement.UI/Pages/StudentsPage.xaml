<UserControl x:Class="StudentManagement.UI.Pages.StudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#ECF0F1" Height="571">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="📚 Quản lý Sinh viên"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Search Box -->
        <Grid Margin="0,0,0,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchBox"
     Grid.Column="0"
     Margin="0,0,10,0"
     FontSize="14" Height="30"
     VerticalAlignment="Center"
     HorizontalAlignment="Stretch"
     Style="{DynamicResource TextBoxStyle}"/>
            <Button Content="Search"
    Grid.Column="1"
    Width="120" Height="30"
    Click="Search_Click"
    Style="{DynamicResource SearchButtonStyle}"
    HorizontalAlignment="Right"
    Background="#135D81"/>
        </Grid>
        <!-- DataGrid -->
        <Border Grid.Row="2" CornerRadius="8" Background="White" Padding="10" 
                BorderBrush="#BDC3C7" BorderThickness="1" >
            <Grid>
                <TextBlock x:Name="NoResultsText"
               Text="Không tìm thấy kết quả phù hợp."
               FontSize="24"
               Foreground="Gray"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed" 
               Margin="0,50,0,0"/>
            <DataGrid x:Name="StudentsDataGrid" 
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F8F9F9"
                      GridLinesVisibility="None"
                      RowHeight="35"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MaSV}" Width="70" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat='\{0:dd/MM/yyyy\}'}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding SoDienThoai}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Lớp" Binding="{Binding TenLop}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Khoa" Binding="{Binding TenKhoa}" Width="200" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="200" IsReadOnly="True">
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TrangThai}" Value="Đang học">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TrangThai}" Value="Nghỉ học">
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <!-- Thêm -->
            <Button Width="120" Margin="0,0,10,0" Background="#27AE60" Style="{StaticResource ActionButtonStyle}" Click="BtnAdding_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Image Source="/Assets/Icons/add-symbol.png" Width="18" Height="18" Margin="0,0,0,0"/>
                    <TextBlock Text="Thêm" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Sửa -->
            <Button Width="120" Margin="0,0,10,0" Background="#2980B9" Style="{StaticResource ActionButtonStyle}" Click="Repair_button">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/modify-icon.png" Width="18" Height="18" Margin="0,0,5,0"/>
                    <TextBlock Text="Sửa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Xóa -->
            <Button Width="120" Background="#C0392B" Style="{StaticResource ActionButtonStyle}" Click="Delete_button">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/delete.png" Width="18" Height="18" Margin="0,0,5,0"/>
                    <TextBlock Text="Xóa" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
