<UserControl x:Class="StudentManagement.UI.Pages.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FB">

    <UserControl.Resources>
        <!-- Gradient Header -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#6C63FF" Offset="0.0"/>
            <GradientStop Color="#48C6EF" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Drop shadow effect -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.2"/>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Height="180" 
                Background="{StaticResource HeaderGradient}" 
                CornerRadius="0,0,20,20"
                Effect="{StaticResource CardShadow}">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Grid Width="90" Height="90" VerticalAlignment="Center">
                    <Ellipse Stroke="White" StrokeThickness="2">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Icons/user.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>

                <!-- Name + Email -->
                <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                    <TextBlock Text="Your name" 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="yourname@gmail.com"
                               FontSize="14" 
                               Foreground="#EAEAEA"/>
                </StackPanel>

                <!-- Edit Button -->
                <Button x:Name="BtnEdit"
                        Grid.Column="2"
                        Content="Edit"
                        Width="100"
                        Height="38"
                        Background="White"
                        Foreground="#3366FF"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        Style="{DynamicResource ActionButtonStyle}"
                        Cursor="Hand"
                        Click="BtnEdit_Click"/>
            </Grid>
        </Border>

        <!-- ================= CONTENT ================= -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10"
                Margin="40,-40,40,40"
                Padding="40"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Thông tin -->
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <!-- cột label -->
                        <ColumnDefinition Width="*"/>
                        <!-- cột textbox -->

                        <ColumnDefinition Width="20"/>

                        <ColumnDefinition Width="120"/>
                        <!-- cột label -->
                        <ColumnDefinition Width="*"/>
                        <!-- cột textbox -->
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Name"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   VerticalAlignment="Center"
                   Margin="0,5"/>
                    <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Width="200" Text="yourname" IsReadOnly="True"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Email account"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   VerticalAlignment="Center"
                   Margin="0,5"/>
                    <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Width="200" Text="yourmail@gmail.com" IsReadOnly="True"/>

                    <!-- Mobile number -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Password"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   VerticalAlignment="Center"
                   Margin="0,5"/>
                    <TextBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Width="200" Text="password" IsReadOnly="True"/>

                    <!-- Location -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Location"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   VerticalAlignment="Center"
                   Margin="0,5"/>
                    <TextBox x:Name="txtLocation" Grid.Row="4" Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Width="200" Text="address" IsReadOnly="True"/>

                    <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" Width="1" Background="Black" HorizontalAlignment="Center"/>

                    <!-- Name -->
                    <TextBlock Grid.Row="0" Grid.Column="3"
                    Text="Gender"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    VerticalAlignment="Center"
                    Margin="0,5"/>
                    <TextBox x:Name="txtGender" Grid.Row="0" Grid.Column="4" Style="{DynamicResource TextBoxStyle}" Width="200" Text="Nam" IsReadOnly="True"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="3"
                    Text="Date of Birth"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    VerticalAlignment="Center"
                    Margin="0,5"/>
                    <TextBox x:Name="txtDOB" Grid.Row="1" Grid.Column="4" Style="{DynamicResource TextBoxStyle}" Width="200" Text="dateofbirth" IsReadOnly="True"/>

                    <!-- Mobile number -->
                    <TextBlock Grid.Row="2" Grid.Column="3"
                    Text="Mobile number"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    VerticalAlignment="Center"
                    Margin="0,5"/>
                    <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="4" Style="{DynamicResource TextBoxStyle}" Width="200" Text="phone_number" IsReadOnly="True"/>

                    <!-- Location -->
                    <TextBlock Grid.Row="3" Grid.Column="3"
                    Text="Permission Group"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    VerticalAlignment="Center"
                    Margin="0,5"/>
                    <TextBox x:Name="txtPermission" Grid.Row="4" Grid.Column="4" Style="{DynamicResource TextBoxStyle}" Width="200" Text="admin" IsReadOnly="True"/>

                </Grid>

                <!-- Save Button -->
                <Button x:Name="BtnSave"
                        Grid.Row="1"
                        Content="Save Changes"
                        HorizontalAlignment="Left"
                        Margin="0,40,0,0"
                        Width="160"
                        Height="40"
                        Background="#3366FF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Style="{DynamicResource ActionButtonStyle}"
                        Visibility="Collapsed"
                        Click="BtnSave_Click"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
