<UserControl x:Class="StudentManagement.UI.Pages.UserPages.UserDepartmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.UI.Pages"
             mc:Ignorable="d" 
             Background="white"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <!-- Không còn 2 cột nữa -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Danh sách Khoa"
               Foreground="White"
               FontSize="22"
               FontWeight="Bold"
               VerticalAlignment="Center"/>
        </Border>

        <!-- ScrollViewer chứa danh sách -->
        <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Hidden"
              HorizontalScrollBarVisibility="Disabled">

            <StackPanel>
                <!-- Search Box -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox"
                             Grid.Column="0"
                             Margin="0,0,10,0"
                             FontSize="14" Height="30"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Style="{DynamicResource TextBoxStyle}"/>
                    <Button Content="Search"
                            Grid.Column="1"
                            Width="120" Height="30"
                            Click="Search_Click"
                            Style="{DynamicResource SearchButtonStyle}"
                            HorizontalAlignment="Right"
                            Background="#135D81"/>
                </Grid>

                <!-- DataGrid -->
                <Border Margin="10" CornerRadius="8" Background="White" Padding="10"
                        BorderBrush="#BDC3C7" BorderThickness="1">
                    <DataGrid x:Name="DepartmentDataGrid"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#F8F9F9"
                              GridLinesVisibility="None"
                              RowHeight="35"
                              Height="300"
                              FontSize="14" SelectionChanged="DepartmentDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã Khoa" Binding="{Binding MaKhoa}" Width="*"/>
                            <DataGridTextColumn Header="Tên Khoa" Binding="{Binding TenKhoa}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>

        </ScrollViewer>

    </Grid>
</UserControl>
