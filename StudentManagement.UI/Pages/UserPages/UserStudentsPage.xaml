<UserControl x:Class="StudentManagement.UI.Pages.UserPages.UserStudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#ECF0F1" Height="479">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Danh sách Sinh viên"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>
        <!-- Search Box -->
        <Grid Margin="0,0,0,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchBox"
             Grid.Column="0"
             Margin="0,0,10,0"
             FontSize="14" Height="30"
             VerticalAlignment="Center"
             HorizontalAlignment="Stretch"
             Style="{DynamicResource TextBoxStyle}"/>
            <Button Content="Search"
            Grid.Column="1"
            Width="120" Height="30"
            Click="Search_Click"
            Style="{DynamicResource SearchButtonStyle}"
            HorizontalAlignment="Right"
            Background="#135D81"/>
        </Grid>
        <!-- DataGrid -->
        <Border Grid.Row="2" CornerRadius="8" Background="White" Padding="10" 
                BorderBrush="#BDC3C7" BorderThickness="1" >
            <Grid>
                <TextBlock x:Name="NoResultsText"
               Text="Không tìm thấy kết quả phù hợp."
               FontSize="24"
               Foreground="Gray"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed" 
               Margin="0,50,0,0"/>
                <DataGrid x:Name="StudentsDataGrid" 
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F8F9F9"
                      GridLinesVisibility="None"
                      RowHeight="35"
                      FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding MaSV}" Width="70" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Lớp" Binding="{Binding TenLop}" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Khoa" Binding="{Binding TenKhoa}" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="200" IsReadOnly="True">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrangThai}" Value="Đang học">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TrangThai}" Value="Nghỉ học">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
