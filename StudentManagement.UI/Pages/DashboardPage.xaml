<UserControl x:Class="StudentManagement.UI.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thẻ thống kê -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <!-- Card 1 -->
                <Border Background="#0078D7" CornerRadius="10" Padding="20" Width="220" Margin="0,0,20,0">
                    <StackPanel>
                        <TextBlock Text="Số lượng sinh viên" Foreground="White" FontSize="16"/>
                        <TextBlock x:Name="txtStudents" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Card 2 -->
                <Border Background="#2D7D46" CornerRadius="10" Padding="20" Width="220" Margin="0,0,20,0">
                    <StackPanel>
                        <TextBlock Text="Số lượng môn học" Foreground="White" FontSize="16"/>
                        <TextBlock x:Name="txtSubjects" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Card 3 -->
                <Border Background="#F7630C" CornerRadius="10" Padding="20" Width="220">
                    <StackPanel>
                        <TextBlock Text="Số lượng khoa" Foreground="White" FontSize="16"/>
                        <TextBlock x:Name="txtFaculties" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Biểu đồ -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
            </Grid>
        </Grid>
    </Grid>
</UserControl>
