<UserControl x:Class="StudentManagement.UI.Functions.StudentsFunc.StudentsAddingWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.UI.Functions.StudentsFunc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Thêm Sinh viên"
               TextAlignment="Center"
               Foreground="White"
               FontSize="22"
               FontWeight="Bold"
               VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" CornerRadius="8" Background="White" Padding="10,10,10,10" 
        BorderBrush="#BDC3C7" BorderThickness="1" >
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- MSSV -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="MSSV:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStudentId" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- Họ tên -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Họ tên:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtName" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- Ngày sinh -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Ngày sinh:" Width="120" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpDateOfBirth" Style="{DynamicResource DateOfBirthStyleBox}" Width="200"/>
                </StackPanel>

                <!-- Giới tính -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Giới tính:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox Style="{DynamicResource ComboBoxStyle}" x:Name="cbGender" Width="200">
                        <ComboBoxItem Style="{DynamicResource ComboBoxStyleItem}" Content="Nam"/>
                        <ComboBoxItem Style="{DynamicResource ComboBoxStyleItem}" Content="Nữ"/>
                    </ComboBox>
                </StackPanel>

                <!-- Email -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Email:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- SDT -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="SDT:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSdt" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- Lớp -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Lớp:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtClass" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- Khoa -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Khoa:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDepart" Style="{DynamicResource TextBoxStyle}" Width="200"/>
                </StackPanel>

                <!-- Mô tả -->
                <StackPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Khác:" Width="120" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                    Grid.RowSpan="3"
                    Width="200"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Width="504">
            <Button Content="Lưu" Width="100" Style="{DynamicResource ActionButtonStyle}" Click="Save_Click" Background="SkyBlue"/>
            <Button Content="Hủy" Width="100" Style="{DynamicResource ActionButtonStyle}" Click="Cancel_Click" Background="OrangeRed"/>
        </StackPanel>

    </Grid>
</UserControl>
